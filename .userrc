################## Some common synonyms from Windows/DOS to make it easier ##################################
alias dir='ls -lhAF --time-style=long-iso --group-directories-first -t'
test -f ~/.cargo/bin/lsd && alias dir='lsd -A -F -l --group-dirs first --total-size --date relative'
test -f /bin/eza && alias dir='eza -lA --group-directories-first --time-style=long-iso --total-size --icons=always'
alias ips='ip -o -c -br address'
alias lnk='ip -o -c -br link'

##### And these are for Linux / Windows Switchers #####
alias md='mkdir';alias rd='rmdir'
alias del='rm'
alias cd..='cd ..'
alias ipconfig='ifconfig'

################## GREEN prompt for user
export PS1='\[\033[0;33m\]\t \[\033[32m\]\u\[\033[37m\]@\[\033[95m\]\h\[\033[00m\]:\[\033[36m\]\w\[\033[0;0;0m\]\$> '

##### To avoid listing snap-partitions on Ubuntu #####
alias lsblk='lsblk -e7'
alias df='df -h -x squashfs --total'

###### These are mostly for WSL on Windows #######
alias c:='cd /mnt/c';alias C:='cd /mnt/c'
alias e:='cd /mnt/e';alias E:='cd /mnt/e'
alias f:='cd /mnt/f';alias F:='cd /mnt/f'
alias g:='cd /mnt/g';alias G:='cd /mnt/g'
alias t:='cd /mnt/t';alias T:='cd /mnt/t'
